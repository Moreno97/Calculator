<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antonio.calculator.MainActivity">

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/textView2"
        android:textSize="48sp"
        android:maxLines="1"
        android:layout_height="120dp"

        android:layout_width="320dp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="textEnd" />

    <TableLayout
        android:layout_width="match_parent"
        android:shrinkColumns="@string/button3"


        android:scrollHorizontally="true"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#424242">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/buttonErase"
                android:background="@drawable/values_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/buttonClear"
                android:textSize="36sp"
                android:onClick="onClear"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="@string/button7"
                android:tag="7"
                style="?android:attr/buttonBarStyle"
                android:id="@+id/button7"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:elevation="0dp"
                android:onClick="onClick"
                android:background="@drawable/values_button"
                android:layout_height="100dp" />

            <Button
                android:text="@string/button8"
                android:tag="8"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button8"
                android:textSize="36sp"
                android:onClick="onClick"
                android:background="@drawable/values_button"
                android:layout_width="100dp" />

            <Button
                android:text="@string/button9"
                android:tag="9"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button9"
                android:textSize="36sp"
                android:onClick="onClick"
                android:background="@drawable/values_button"
                android:layout_width="100dp" />

            <Button
                android:text="@string/buttonSum"
                android:tag="+"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/buttonSum"
                android:textSize="36sp"
                android:layout_width="100dp"
                android:onClick="onClick"
                android:background="@drawable/values_button_right"
                android:visibility="visible"
                android:textColor="@android:color/background_light" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="@string/button4"
                android:tag="4"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button4"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:background="@drawable/values_button" />

            <Button
                android:text="@string/button5"
                android:tag="5"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button5"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:background="@drawable/values_button" />

            <Button
                android:text="@string/button6"
                android:tag="6"
                style="?android:attr/buttonBarStyle"
                android:id="@+id/button6"
                android:textSize="36sp"
                android:onClick="onClick"
                android:background="@drawable/values_button"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <Button
                android:text="@string/buttonRest"
                android:tag="-"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button"
                android:textSize="36sp"
                android:layout_width="100dp"
                android:onClick="onClick"
                android:background="@drawable/values_button_right"
                android:visibility="visible"
                android:textColor="@android:color/background_light" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="@string/button1"
                android:tag="1"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button1"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:background="@drawable/values_button" />

            <Button
                android:text="@string/button2"
                android:tag="2"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button2"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:background="@drawable/values_button" />

            <Button
                android:text="@string/button3"
                android:tag="3"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button3"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:background="@drawable/values_button" />

            <Button
                android:text="@string/buttonMultiply"
                android:tag="x"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button10"
                android:textSize="36sp"
                android:layout_width="100dp"
                android:onClick="onClick"
                android:background="@drawable/values_button_right"
                android:visibility="visible"
                android:textColor="@android:color/background_light" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false">

            <Button
                android:text="@string/buttonComa"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/buttonComa"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:background="@drawable/values_button" />

            <Button
                android:text="@string/button0"
                android:tag="0"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button0"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:background="@drawable/values_button" />

            <Button
                android:text="@string/buttonResultado"
                android:background="@drawable/values_button"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/buttonResultado"
                android:textSize="36sp"
                android:onClick="onClick"
                android:textAlignment="center"
                android:layout_width="100dp" />

            <Button
                android:text="@string/buttonDivide"
                android:tag="@string/buttonDivide"
                style="?android:attr/buttonBarStyle"
                android:layout_height="100dp"
                android:id="@+id/button11"
                android:textSize="36sp"
                android:layout_width="100dp"
                android:onClick="onClick"
                android:background="@drawable/values_button_right"
                android:visibility="visible"
                android:textColor="@android:color/background_light" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_height="72dp">

        <Button
            android:text="@string/parentesis"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button30"
            android:textSize="36sp"
            android:onClick="onClear"
            android:textAlignment="center"
            android:layout_height="70dp"
            android:layout_width="wrap_content" />

        <Button
            android:text="@string/parentesis2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button31"
            android:textSize="36sp"
            android:onClick="onClear"
            android:textAlignment="center"
            android:layout_height="70dp"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:textSize="48sp"
        android:maxLines="1"
        android:layout_height="120dp"

        android:layout_width="320dp"
        android:textAllCaps="false"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
