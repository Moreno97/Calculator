<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.antonio.calculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="36sp"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:clickable="false"
            android:textColorLink="?attr/colorPrimaryDark"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="350dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="C"
                android:layout_height="100dp"
                android:id="@+id/buttonErase"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onErase"
                android:layout_alignTop="@+id/buttonResult" />

            <Button
                android:text="="
                android:layout_height="100dp"
                android:id="@+id/buttonResult"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onResult" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="7"
                android:layout_height="100dp"
                android:id="@+id/button7"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:elevation="0dp"
                android:layout_below="@+id/buttonResult" />

            <Button
                android:text="8"
                android:layout_height="100dp"
                android:id="@+id/button8"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_toEndOf="@+id/button4" />

            <Button
                android:text="9"
                android:layout_height="100dp"
                android:id="@+id/button9"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_toEndOf="@+id/button5" />

            <Button
                android:text="+"
                android:layout_height="100dp"
                android:id="@+id/buttonSum"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onSum" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="4"
                android:layout_height="100dp"
                android:id="@+id/button4"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_toStartOf="@+id/button2" />

            <Button
                android:text="5"
                android:layout_height="100dp"
                android:id="@+id/button5"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_toEndOf="@+id/button1" />

            <Button
                android:text="6"
                android:layout_height="100dp"
                android:id="@+id/button6"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_alignTop="@+id/button5"
                android:layout_toEndOf="@+id/button5" />

            <Button
                android:text="-"
                android:layout_height="100dp"
                android:id="@+id/buttonSum"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onSum"
                android:layout_toEndOf="@+id/buttonSum" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="1"
                android:layout_height="100dp"
                android:id="@+id/button1"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onClick"
                android:layout_below="@+id/button5" />

            <Button
                android:text="2"
                android:layout_height="100dp"
                android:id="@+id/button2"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_toEndOf="@+id/buttonComa" />

            <Button
                android:text="3"
                android:layout_height="100dp"
                android:id="@+id/button3"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_below="@+id/button6"
                android:layout_toEndOf="@+id/button2" />

            <Button
                android:text="x"
                android:layout_height="100dp"
                android:id="@+id/buttonMultiply"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onSum"
                android:layout_toEndOf="@+id/buttonResult"
                android:layout_alignTop="@+id/buttonSum" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text=","
                android:layout_height="100dp"
                android:id="@+id/buttonComa"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_toStartOf="@+id/button0" />

            <Button
                android:text="0"
                android:layout_height="100dp"
                android:id="@+id/button0"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:layout_centerHorizontal="true" />

            <Button
                android:text="รท"
                android:layout_column="3"
                android:layout_height="100dp"
                android:id="@+id/buttonDivide"
                android:textSize="36sp"
                android:layout_width="170dp"
                android:onClick="onSum"
                android:layout_below="@+id/buttonSum"
                android:layout_toEndOf="@+id/buttonResult" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
